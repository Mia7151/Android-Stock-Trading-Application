<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="2dp">

    <RelativeLayout
        android:id = "@+id/backgroud_d"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F44336"
        android:clickable="true">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/deletea"
            android:contentDescription="TODO"/>


    </RelativeLayout>

    <RelativeLayout
        android:id = "@+id/row"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
    <TextView
        android:id="@+id/stock_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXXX"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/price_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="10dp"
        android:text="XXX"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/company_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$XXX"
        android:layout_marginTop="50dp"
        android:textSize="18dp"

        android:layout_marginLeft="20dp"/>


    <ImageView
        android:id="@+id/arrow_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/trendingdown" />

    <TextView
        android:id="@+id/price1_f"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="23dp"
        android:src="@drawable/chevronrighta"
        app:tint="#888686" />


    </RelativeLayout>

    <View
        android:layout_marginTop="79dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E1DFDF" />

</androidx.cardview.widget.CardView>







